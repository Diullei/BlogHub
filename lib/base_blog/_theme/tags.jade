extends tmpl/master

block title
	| Tags

block header
	| Tags

block content
	div.span12
		- var tags = main.getTags();
		ul.tag_box.inline
			- for (var tag in tags)
				li
					a(href="/tags.html##{tag}-ref") #{tag} &nbsp;
						span #{tags[tag].length}
		
		- for (var tag in tags)
			h2(id="#{tag}-ref") #{tag}
			ul
				-for (var i = 0; i < tags[tag].length; i++)
					li
						a(href="#") #{tags[tag][i].header.title}
